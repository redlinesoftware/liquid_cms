<div id="components">
  <% form_tag upload_cms_components_path, :multipart => true do %>
    <%= file_field_tag :zip_file %>
    <%= submit_tag 'Upload' %> <em>.zip files only</em>
  <% end %>

  <% if @components.empty? %>
    <p><%= t 'components.actions.index.none' %></p>
  <% else %>
    <%= list_files @components %>
  <% end %>
</div>
